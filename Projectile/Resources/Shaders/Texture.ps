////////////////////////////////////////////////////////////////////////////////
// Filename: color.ps
////////////////////////////////////////////////////////////////////////////////

Texture2D shaderTexture;
SamplerState SampleType;

cbuffer ChannelBuffer {
    float3 color;
    float alpha;
}

//////////////
// TYPEDEFS //
//////////////
struct PixelInputType
{
    float4 position : SV_POSITION;
    float2 tex : TEXCOORD0;
};


////////////////////////////////////////////////////////////////////////////////
// Pixel Shader
////////////////////////////////////////////////////////////////////////////////

float4 psMain(PixelInputType input) : SV_TARGET
{
    float4 pixel = shaderTexture.Sample(SampleType, input.tex);
    pixel.r *= color.r;
    pixel.g *= color.g;
    pixel.b *= color.b;
    pixel.a *= alpha;
    return pixel;
}  
